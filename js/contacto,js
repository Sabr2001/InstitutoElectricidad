//TODO ESTRUCUTURA DADA EN CLASE, SE OCUPA INTEGRA R CON LA VISTA CONTACTO.PHP//
$("#frmContacto").validate({
    rules: {
        asunto: {
            required: true,
            minlength: 3
        },
        name: {
            required: true
        },
        email: {
            required: true,
            email: true
        },
        mensaje: {
            required: true,
            rangelength: [10, 20]
        }
    },
     messages: {
        asunto: {
            required: "Campo asunto es obligatorio",
            minlength: "Debe sigitar mínimo 3 caractéres"
        },
        name: {
            required: "Campo nombre es obligatorio"
        },
        email: {
            required: "Campo email es obligatorio",
            email: "Debe ingresar un corre válido"
        },
        mensaje: {
            required: "Campo mensaje es obligatorio",
            rangelength: "Debe ingresar entre 10 y 20 caractéres"
        }
    }
});
